<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <FrameLayout
        android:background="#fffe00"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:id="@+id/frameLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Số Bom"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txvSoBom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="6"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Thời Gian"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txvThoiGian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="60:56"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
                   android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

           <ImageView
               android:id="@+id/imgComplete"
               android:src="@drawable/complete"
               android:layout_width="100dp"
               android:layout_height="100dp" />
        </LinearLayout>

    </FrameLayout>
     <GridView
         android:id="@+id/mangBom"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_toLeftOf="@+id/frameLayout2"
         android:layout_toRightOf="@+id/frameLayout"
       ></GridView>        <FrameLayout
    android:background="#fffe00"
    android:layout_width="100dp"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:id="@+id/frameLayout2">


    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgDD"
            android:src="@drawable/flag"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <ImageView
            android:id="@+id/imgDD2"
            android:src="@drawable/flagx"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <ImageView
            android:id="@+id/imgreset"
            android:src="@drawable/resetload"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>

</FrameLayout>
</RelativeLayout>